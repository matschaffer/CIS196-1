<%= stylesheet_link_tag "bootstrap/bootstrap.css" %>

<%= form_for(@user, :html => { :class => "well"})  do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-error">
      <strong><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</strong>

      <ul style="list-style: none;">
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.radio_button(:gender, "male", :class => "radio inline") %>
    <%= label(:gender_m, "Male") %>
    <%= f.radio_button(:gender, "female") %>
    <%= label(:gender_f, "Female") %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
