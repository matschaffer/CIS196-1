<%= stylesheet_link_tag "application.css" %>
<body>
<div class="site_wrapper">


	<table id="center_wrapper">
	<td>
		<h1>Poolly Users</h1>
	
	
		<h3> 
		<table>
		  <tr>
		    <th>Username</th>
		    <th>Password</th>
		    <th>Email</th>
		    <th>Gender</th>
		    <th></th>
		    <th></th>
		    <th></th>
		  </tr>
		<% @users.each do |user| %>
		  <tr>
		    <td><%= user.username %></td>
		    <td><%= user.password %></td>
		    <td><%= user.email %></td>
		    <td><%= user.gender %></td>
		    <td><%= link_to 'Show', user %></td>
		    <td><%= link_to 'Edit', edit_user_path(user) %></td>
		    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
		  </tr>
		<% end %>
		</table>
		
		<br />
		
		<%= link_to 'Register for Poolly', new_user_path %>
<br>	
		<%= link_to 'Take a look at existing Groups', "/groups" %>
	</td>
	</table>
</div>

</body>
